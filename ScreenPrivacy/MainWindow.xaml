<Window x:Class="ScreenPrivacy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screen Privacy" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="250">
            <Button Name="StartServiceButton" Content="Start Service" Width="150" Height="37" Margin="5"
            Click="StartServiceButton_Click"/>
            <Button Name="StopServiceButton" Content="Stop Service" Width="150" Height="40" Margin="5"
            Click="StopServiceButton_Click" IsEnabled="False"/>
            <Button Name="SetTimeOut" Content="Set Time Out" Width="150" Height="40" Margin="5"
Click="SetTimeOut_Click" IsEnabled="True"/>
            <Button x:Name="PreviewButton" Content="Preview Webcam" Width="150" Height="40" Margin="5"
            Click="PreviewButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit" Width="150" Height="40" Margin="5"
            Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

