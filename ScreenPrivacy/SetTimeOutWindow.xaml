<Window x:Class="ScreenPrivacy.SetTimeOutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenPrivacy"
        mc:Ignorable="d"
        Title="SetTimeOutWindow" Height="300" Width="400">
    <Grid>
        <Label Content="Enter Time Out" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Background="Red" Foreground="Yellow"/>
        <TextBox x:Name="TimeOutTextBox" HorizontalAlignment="Center" Margin="0,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Height="43" TextChanged="TextBox_TextChanged" Background="White" TextAlignment="Center" BorderThickness="3" BorderBrush="Purple"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="101,189,0,0" VerticalAlignment="Top" Background="Green" Height="44" Width="84" Foreground="Red" Click="SaveTimeOut_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="220,189,0,0" VerticalAlignment="Top" Background="Gray" Height="44" Width="84" Foreground="Red" Click="CancelButton_Click"/>

    </Grid>
</Window>
